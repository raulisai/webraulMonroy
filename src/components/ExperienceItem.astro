---
import LinkInline from "./LinkInline.astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  company: string;
  description: string;
  link?: string;
  date: string;
  tags?: string[];
}

const { title, company, description, link, date, tags = [] } = Astro.props;

const ICON_MAP: Record<string, string> = {
  PYTHON: "simple-icons:python",
  OPENSHIFT: "simple-icons:redhatopenshift",
  JENKINS: "simple-icons:jenkins",
  "GIT ACTION": "simple-icons:githubactions",
  MICROSERVICIOS: "simple-icons:docker",
  "AWS CI/CD": "simple-icons:amazonaws",
  TROUBLESHOOTING: "simple-icons:linux",
  "JAVA SPRING": "simple-icons:spring",
  SQL: "simple-icons:mysql",
  LINUX: "simple-icons:linux",
  AWS: "simple-icons:amazonaws",
  UIPATH: "simple-icons:uipath",
  VBASIC: "simple-icons:dotnet",
  "AUTOMATION PROCESS": "simple-icons:robotframework",
  SVELTE: "simple-icons:svelte",
  "THREE.JS": "simple-icons:threedotjs",
  "API OPENIA": "simple-icons:openai",
  "TAILWIND CSS": "simple-icons:tailwindcss",
};
---

<div
  class="relative ml-9 mr-4 md:mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4"
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div
    class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3"
  >
    <div class="text-pretty">
      {description}
    </div>
    {
      link && (
        <LinkInline href={link}>
          Saber m√°s{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }

    {
      tags.length > 0 && (
        <div class="mt-4 overflow-hidden mask-fade w-full max-w-[calc(100vw-3rem)] md:max-w-full">
          <div class="flex animate-marquee whitespace-nowrap gap-x-12 py-2 w-max">
            {[...tags, ...tags, ...tags, ...tags].map((tag) => {
              const iconName =
                ICON_MAP[tag.toUpperCase()] || "simple-icons:codeforces";
              return (
                <span class="flex items-center gap-x-2 text-sm font-medium text-gray-700/60 dark:text-gray-300/50 hover:text-blue-500 hover:opacity-100 transition-all duration-300">
                  <Icon
                    name={iconName}
                    class="size-4 opacity-50 transition-opacity"
                  />
                  {tag}
                </span>
              );
            })}
          </div>
        </div>
      )
    }
  </div>
</div>

<style>
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-marquee {
      animation: marquee 20s linear infinite;
    }
  }

  .mask-fade {
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
