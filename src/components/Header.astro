---
import ThemeToggle from "./ThemeToggle.astro";
import { getProfile } from "@/lib/profiles";

const code = Astro.url.searchParams.get("code");
const { personalInfo, t } = getProfile(code);

const navItems = [
  {
    title: t("experiencia"),
    label: "experiencia",
    url: "/#experiencia",
  },
  {
    title: t("proyectos"),
    label: "proyectos",
    url: "/#proyectos",
  },
  {
    title: t("sobremi"),
    label: "sobre-mi",
    url: "/#sobre-mi",
  },
  ...(personalInfo.email
    ? [
        {
          title: t("contacto"),
          label: "contacto",
          url: `mailto:${personalInfo.email}`,
        },
      ]
    : []),
];
---

<header
  id="landing-header"
  class="fixed top-0 z-20 flex items-center justify-center w-full mx-auto transition-transform duration-300 -translate-y-[80%] md:-translate-y-[80%] md:hover:translate-y-0 focus-within:translate-y-0"
>
  <div
    class="absolute top-[80%] left-1/2 -translate-x-1/2 w-32 h-2 bg-gray-400/20 dark:bg-white/10 rounded-full blur-[1px] opacity-100 md:opacity-0 transition-opacity duration-300 pointer-events-none md:group-hover:opacity-100"
  >
  </div>

  <nav
    class="flex px-2 md:px-3 mt-2 text-xs md:text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center backdrop-blur-md bg-white/50 dark:bg-gray-800/90 shadow-lg ring-1 ring-black/10 dark:ring-white/10 transition-all duration-300 group"
  >
    {
      navItems.map((link) => (
        <a
          class="relative block px-3 md:px-3 py-2 transition hover:text-blue-500 dark:hover:text-blue-500"
          aria-label={link.label}
          href={link.url}
        >
          {link.title}
        </a>
      ))
    }
    <ThemeToggle />
  </nav>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const header = document.querySelector("#landing-header") as HTMLElement;
    const sections = document.querySelectorAll("section");
    const navItems = document.querySelectorAll("header nav a");

    const isMobile = () => window.innerWidth < 768;

    // Show header briefly on load
    setTimeout(() => {
      header.classList.remove("-translate-y-[80%]");
      setTimeout(() => {
        if (!header.matches(":hover") && !isMobile()) {
          header.classList.add("-translate-y-[80%]");
        }
      }, 2000);
    }, 500);

    // Scroll behavior
    let lastScrollY = window.scrollY;
    window.addEventListener("scroll", () => {
      if (window.scrollY < lastScrollY || window.scrollY < 50) {
        header.classList.remove("-translate-y-[80%]");
      } else if (window.scrollY > lastScrollY && !header.matches(":hover")) {
        header.classList.add("-translate-y-[80%]");
      }
      lastScrollY = window.scrollY;
    });

    // Click behavior for mobile
    header.addEventListener("click", () => {
      if (isMobile()) {
        header.classList.toggle("-translate-y-[80%]");
      }
    });

    const callback = (entries: IntersectionObserverEntry[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-blue-500");
            } else {
              item.classList.remove("text-blue-500");
            }
          });
        }
      });
    };

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    });

    sections.forEach((section) => {
      observer.observe(section);
    });

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect();
      } else {
        sections.forEach((section) => {
          observer.observe(section);
        });
      }
    };
  });
</script>

<style>
  @media (min-width: 768px) {
    header:hover {
      transform: translateY(0);
    }
  }
</style>
