---
import { getProfile } from "@/lib/profiles";
const code = Astro.url.searchParams.get("code");
const { personalInfo, t } = getProfile(code);
const personalImageAlt = personalInfo.name;
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";
---

<div class="max-w-xl px-4 md:px-0">
  <div class="flex flex-col md:flex-row gap-4 mb-4 items-center md:items-start">
    <img
      class="rounded-full shadow-lg size-16"
      src={personalInfo.image}
      alt={personalImageAlt}
    />
    <a
      href={personalInfo.linkedin}
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>{t("disponible")}</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white text-center md:text-left"
  >
    Hey, soy {personalInfo.name.split(" ")[0].toLowerCase()}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300 text-center md:text-left text-pretty"
  >
    {personalInfo.summary}
  </p>
  <nav class="flex flex-wrap gap-4 mt-8 justify-center md:justify-start">
    <SocialPill href={`mailto:${personalInfo.email}`}>
      <MailIcon class="size-4" />
      {t("contactame")}
    </SocialPill>
    <SocialPill href={personalInfo.linkedin}>
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
